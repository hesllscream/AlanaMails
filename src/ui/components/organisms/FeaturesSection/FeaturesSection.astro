---
/**
 * FeaturesSection - Presentación de Alana AI
 * Diseño dark premium con cards glass y animaciones
 */
import DynamicTag from '@/ui/components/atoms/DynamicTag/DynamicTag.astro'
import Icon from '@/ui/components/atoms/Icon/Icon.astro'

interface Props {
  name?: string
}

const { name = '[NOMBRE]' } = Astro.props

const features = [
  {
    icon: 'zap',
    titleEs: 'Responde YA',
    titleEn: 'Responds NOW',
    titlePt: 'Responde JÁ',
    descEs: '0.2 segundos de tiempo de respuesta. Tus fans nunca esperan.',
    descEn: '0.2 seconds response time. Your fans never wait.',
    descPt: '0.2 segundos de tempo de resposta. Seus fãs nunca esperam.',
    color: 'pink'
  },
  {
    icon: 'moon',
    titleEs: 'Modo Sueño',
    titleEn: 'Sleep Mode',
    titlePt: 'Modo Sono',
    descEs: 'Tú duermes, Alana vende. Ingresos 24/7 sin esfuerzo.',
    descEn: 'You sleep, Alana sells. 24/7 income effortlessly.',
    descPt: 'Você dorme, Alana vende. Renda 24/7 sem esforço.',
    color: 'purple'
  },
  {
    icon: 'lock',
    titleEs: 'Privacidad Total',
    titleEn: 'Total Privacy',
    titlePt: 'Privacidade Total',
    descEs: 'Nadie ve tus DMs, solo tú y la IA. 100% confidencial.',
    descEn: 'No one sees your DMs, only you and the AI. 100% confidential.',
    descPt: 'Ninguém vê suas DMs, só você e a IA. 100% confidencial.',
    color: 'lavender'
  },
  {
    icon: 'target',
    titleEs: 'Ventas Inteligentes',
    titleEn: 'Smart Sales',
    titlePt: 'Vendas Inteligentes',
    descEs: 'Detecta oportunidades de venta y cierra automáticamente.',
    descEn: 'Detects sales opportunities and closes automatically.',
    descPt: 'Detecta oportunidades de venda e fecha automaticamente.',
    color: 'pink'
  },
  {
    icon: 'chat',
    titleEs: 'Conversaciones Naturales',
    titleEn: 'Natural Conversations',
    titlePt: 'Conversas Naturais',
    descEs: 'Respuestas tan humanas que nadie nota la diferencia.',
    descEn: 'Responses so human that no one notices the difference.',
    descPt: 'Respostas tão humanas que ninguém nota a diferença.',
    color: 'purple'
  },
  {
    icon: 'chart',
    titleEs: 'Analytics Pro',
    titleEn: 'Pro Analytics',
    titlePt: 'Analytics Pro',
    descEs: 'Dashboard con métricas en tiempo real de tu rendimiento.',
    descEn: 'Dashboard with real-time metrics of your performance.',
    descPt: 'Dashboard com métricas em tempo real do seu desempenho.',
    color: 'lavender'
  }
]
---

<section id="features" class="py-16 md:py-24 lg:py-32 relative">
  <div class="max-w-7xl mx-auto px-4 md:px-6 lg:px-12">
    <!-- Header -->
    <div class="text-center mb-12 md:mb-16 animate-on-scroll">
      <h2 class="text-3xl md:text-5xl lg:text-6xl font-serif mb-4 md:mb-6">
        <span class="text-cr-text">Alana</span>
        <span class="bg-gradient-to-r from-cr-pink via-cr-lavender to-cr-purple bg-clip-text text-transparent">AI</span>
      </h2>
      <p class="text-base md:text-lg lg:text-xl text-cr-muted max-w-2xl mx-auto font-light">
        <span class="i18n-text" data-i18n-es="He pre-configurado un clon digital para ti," data-i18n-en="I've pre-configured a digital clone for you," data-i18n-pt="Eu pré-configurei um clone digital para você,">He pre-configurado un clon digital para ti,</span> 
        <span class="bg-gradient-to-r from-cr-pink to-cr-purple bg-clip-text text-transparent font-medium">{name}</span>.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 lg:gap-8">
      {features.map((feature, index) => (
        <div 
          class="premium-card group animate-on-scroll"
          data-delay={index * 100}
        >
          <div class={`w-14 h-14 md:w-16 md:h-16 rounded-2xl flex items-center justify-center mb-4 md:mb-5 transition-all duration-300 group-hover:scale-110 ${
            feature.color === 'pink' ? 'bg-cr-pink/20 group-hover:bg-cr-pink/30 text-cr-pink' :
            feature.color === 'purple' ? 'bg-cr-purple/20 group-hover:bg-cr-purple/30 text-cr-purple' :
            'bg-cr-lavender/20 group-hover:bg-cr-lavender/30 text-cr-lavender'
          }`}>
            <Icon name={feature.icon} size="xl" />
          </div>
          <h3 class={`text-lg md:text-xl font-serif mb-2 md:mb-3 transition-colors duration-300 i18n-text ${
            feature.color === 'pink' ? 'text-cr-pink group-hover:text-cr-pink-light' :
            feature.color === 'purple' ? 'text-cr-purple group-hover:text-cr-lavender' :
            'text-cr-lavender group-hover:text-cr-lavender-dark'
          }`} data-i18n-es={feature.titleEs} data-i18n-en={feature.titleEn} data-i18n-pt={feature.titlePt}>
            {feature.titleEs}
          </h3>
          <p class="text-sm md:text-base text-cr-muted leading-relaxed i18n-text" data-i18n-es={feature.descEs} data-i18n-en={feature.descEn} data-i18n-pt={feature.descPt}>
            {feature.descEs}
          </p>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-12 md:mt-16 animate-on-scroll" data-delay="600">
      <a 
        href="#pricing" 
        class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-cr-pink to-cr-purple text-white rounded-lg text-sm uppercase font-bold tracking-wider transition-all duration-300 hover:shadow-lg hover:shadow-cr-purple/40 hover:-translate-y-0.5"
      >
        <span class="i18n-text" data-i18n-es="Activar Alana para mí" data-i18n-en="Activate Alana for me" data-i18n-pt="Ativar Alana para mim">Activar Alana para mí</span>
        <span class="group-hover:translate-x-1 transition-transform">→</span>
      </a>
    </div>
  </div>
</section>
