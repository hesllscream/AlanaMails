---
/**
 * PricingSection - Oferta exclusiva con estilo premium
 * Dise√±o dark con glass card y efectos glow
 */
import Icon from '@/ui/components/atoms/Icon/Icon.astro'

interface Props {
  name?: string
  calLink?: string
}

const { 
  name = '[NOMBRE]',
  calLink = 'https://cal.com/tu-link-de-demo'
} = Astro.props

const benefits: Array<{ text: string; value: string; icon: any; highlight?: boolean }> = [
  { text: 'Setup T√©cnico incluido', value: '$97 value', icon: 'cpu' },
  { text: 'Garant√≠a "Alana Pays You"', value: 'Si no funciona, te pago', icon: 'dollar' },
  { text: 'Acceso al Syndicate', value: 'Programa de referidos', icon: 'crown', highlight: true },
  { text: 'Soporte VIP 24/7', value: 'Respuesta en <2h', icon: 'chat' },
  { text: 'Actualizaciones gratuitas', value: 'De por vida', icon: 'zap' }
]
---

<section id="pricing" class="py-12 md:py-16 lg:py-20 relative min-h-screen flex items-center">
  <div class="max-w-7xl mx-auto px-4 md:px-6 lg:px-12 w-full">
    <!-- Header -->
    <div class="text-center mb-6 md:mb-8 animate-on-scroll">
      <h2 class="text-xl md:text-3xl lg:text-4xl font-serif mb-2">
        <span class="text-cr-text">Tu acceso </span>
        <span class="bg-gradient-to-r from-cr-pink via-cr-lavender to-cr-purple bg-clip-text text-transparent">privilegiado</span>
      </h2>
    </div>

    <!-- Pricing Card -->
    <div class="max-w-md mx-auto animate-on-scroll" data-delay="100">
      <div class="relative">
        <!-- Glow effect - Dorado llamativo -->
        <div class="absolute -inset-1 bg-gradient-to-r from-amber-400 via-yellow-300 to-amber-500 rounded-2xl blur-md opacity-40 animate-pulse"></div>
        
        <!-- Card -->
        <div class="relative glass-card p-4 md:p-6 lg:p-8 text-center">
          <!-- Badge -->
          <div class="absolute -top-4 left-1/2 -translate-x-1/2">
            <span class="bg-gradient-to-r from-cr-pink to-cr-purple text-white px-6 py-2 rounded-full text-xs uppercase font-bold tracking-wider shadow-lg">
              Beca de Validaci√≥n
            </span>
          </div>

          <h3 class="text-lg md:text-xl font-serif text-cr-text mt-3 mb-1">The Growth Grant</h3>
          <p class="text-cr-muted text-xs md:text-sm mb-4">Para Creadoras Top Tier</p>
          
          <!-- Price -->
          <div class="mb-1">
            <span class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-cr-pink to-cr-purple bg-clip-text text-transparent">$222</span>
            <span class="text-cr-muted text-sm ml-1">/ mes 1</span>
          </div>
          
          <p class="text-xs text-cr-pink font-medium mb-4">
            (Precio normal: $1,500/mes por chatter humano)
          </p>

          <!-- Benefits -->
          <div class="space-y-2 mb-4 md:mb-6 text-left">
            {benefits.map((benefit) => (
              <div class={`flex items-center gap-2 p-2 md:p-2.5 rounded-lg transition-all duration-300 ${
                benefit.highlight 
                  ? 'bg-gradient-to-r from-cr-pink/20 to-cr-purple/20 border border-cr-pink/30' 
                  : 'bg-cr-base/50 border border-cr-purple/10 hover:border-cr-purple/30'
              }`}>
                <Icon name={benefit.icon} size="sm" class={benefit.highlight ? 'text-cr-pink' : 'text-cr-lavender'} />
                <div class="flex-1 min-w-0">
                  <p class={`text-xs md:text-sm font-medium truncate ${benefit.highlight ? 'text-cr-pink' : 'text-cr-text'}`}>
                    {benefit.text}
                  </p>
                </div>
                <Icon name="check" size="xs" class="text-cr-green flex-shrink-0" />
              </div>
            ))}
          </div>

          <!-- CTA Button -->
          <a 
            href={calLink} 
            class="block w-full py-3 md:py-3.5 bg-gradient-to-r from-cr-pink to-cr-purple text-white rounded-lg text-xs md:text-sm uppercase font-bold tracking-wider transition-all duration-300 hover:shadow-lg hover:shadow-cr-purple/40 hover:-translate-y-0.5"
          >
            Activar Beca para {name}
          </a>
          
          <p class="mt-2 text-[10px] md:text-xs text-cr-muted/70">
            üîí Pago seguro ‚Ä¢ Cancela cuando quieras
          </p>
        </div>
      </div>
    </div>

    <!-- Trust badges -->
    <div class="flex flex-wrap justify-center gap-4 md:gap-6 mt-6 md:mt-8 animate-on-scroll" data-delay="200">
      <div class="flex items-center gap-1.5 text-cr-muted text-xs">
        <Icon name="check" size="xs" class="text-cr-green" />
        <span>Sin contratos</span>
      </div>
      <div class="flex items-center gap-1.5 text-cr-muted text-xs">
        <Icon name="shield" size="xs" class="text-cr-green" />
        <span>Garant√≠a 30 d√≠as</span>
      </div>
      <div class="flex items-center gap-1.5 text-cr-muted text-xs">
        <Icon name="chat" size="xs" class="text-cr-green" />
        <span>Soporte 24/7</span>
      </div>
    </div>
  </div>
</section>
