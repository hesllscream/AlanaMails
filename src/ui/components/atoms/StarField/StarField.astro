---
/**
 * StarField - Componente de fondo con vía láctea púrpura
 * Crea un efecto de galaxia elegante y profesional
 */
---

<!-- Vía Láctea - Nebulosa púrpura -->
<div class="milky-way"></div>

<!-- Estrellas brillantes -->
<div class="stars-layer stars-small"></div>
<div class="stars-layer stars-medium"></div>
<div class="stars-layer stars-large"></div>

<style>
  /* Vía Láctea - Nebulosa diagonal - MÁS VISIBLE */
  .milky-way {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 0;
    background: 
      /* Núcleo central de la vía láctea - más brillante */
      radial-gradient(ellipse 80% 40% at 30% 40%, rgba(168, 85, 247, 0.25) 0%, transparent 60%),
      radial-gradient(ellipse 60% 30% at 70% 60%, rgba(139, 92, 246, 0.2) 0%, transparent 50%),
      /* Nubes de nebulosa púrpura */
      radial-gradient(ellipse 100% 50% at 20% 30%, rgba(124, 58, 237, 0.15) 0%, transparent 70%),
      radial-gradient(ellipse 90% 45% at 80% 70%, rgba(167, 139, 250, 0.12) 0%, transparent 60%),
      /* Banda diagonal de la vía láctea */
      linear-gradient(135deg, 
        transparent 0%, 
        rgba(139, 92, 246, 0.06) 20%,
        rgba(168, 85, 247, 0.15) 35%,
        rgba(196, 181, 253, 0.1) 50%,
        rgba(139, 92, 246, 0.15) 65%,
        rgba(124, 58, 237, 0.06) 80%,
        transparent 100%
      ),
      /* Toque rosa sutil */
      radial-gradient(ellipse 50% 25% at 50% 50%, rgba(236, 72, 153, 0.08) 0%, transparent 70%);
  }

  /* Capa base de estrellas */
  .stars-layer {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 1;
  }

  /* Estrellas pequeñas - muchas y más brillantes */
  .stars-small {
    background-image:
      radial-gradient(1.5px 1.5px at 5% 8%, #fff, transparent),
      radial-gradient(1.5px 1.5px at 12% 25%, rgba(255,255,255,0.9), transparent),
      radial-gradient(1.5px 1.5px at 18% 12%, #c4b5fd, transparent),
      radial-gradient(1.5px 1.5px at 25% 35%, rgba(255,255,255,0.85), transparent),
      radial-gradient(1.5px 1.5px at 32% 5%, #fff, transparent),
      radial-gradient(1.5px 1.5px at 38% 22%, rgba(196,181,253,1), transparent),
      radial-gradient(1.5px 1.5px at 45% 42%, rgba(255,255,255,0.8), transparent),
      radial-gradient(1.5px 1.5px at 52% 15%, #fff, transparent),
      radial-gradient(1.5px 1.5px at 58% 38%, rgba(255,255,255,0.9), transparent),
      radial-gradient(1.5px 1.5px at 65% 8%, #c4b5fd, transparent),
      radial-gradient(1.5px 1.5px at 72% 28%, rgba(255,255,255,0.85), transparent),
      radial-gradient(1.5px 1.5px at 78% 45%, #fff, transparent),
      radial-gradient(1.5px 1.5px at 85% 18%, rgba(196,181,253,0.95), transparent),
      radial-gradient(1.5px 1.5px at 92% 32%, rgba(255,255,255,1), transparent),
      radial-gradient(1.5px 1.5px at 8% 55%, #fff, transparent),
      radial-gradient(1.5px 1.5px at 15% 68%, rgba(255,255,255,0.85), transparent),
      radial-gradient(1.5px 1.5px at 22% 52%, #c4b5fd, transparent),
      radial-gradient(1.5px 1.5px at 28% 75%, rgba(255,255,255,0.9), transparent),
      radial-gradient(1.5px 1.5px at 35% 62%, #fff, transparent),
      radial-gradient(1.5px 1.5px at 42% 85%, rgba(196,181,253,0.9), transparent),
      radial-gradient(1.5px 1.5px at 48% 58%, rgba(255,255,255,1), transparent),
      radial-gradient(1.5px 1.5px at 55% 72%, #fff, transparent),
      radial-gradient(1.5px 1.5px at 62% 88%, rgba(255,255,255,0.8), transparent),
      radial-gradient(1.5px 1.5px at 68% 65%, #c4b5fd, transparent),
      radial-gradient(1.5px 1.5px at 75% 78%, rgba(255,255,255,0.9), transparent),
      radial-gradient(1.5px 1.5px at 82% 55%, #fff, transparent),
      radial-gradient(1.5px 1.5px at 88% 92%, rgba(196,181,253,1), transparent),
      radial-gradient(1.5px 1.5px at 95% 68%, rgba(255,255,255,0.85), transparent);
    animation: twinkle 3s ease-in-out infinite;
  }

  /* Estrellas medianas - más brillantes */
  .stars-medium {
    background-image:
      radial-gradient(2.5px 2.5px at 10% 15%, #fff, transparent),
      radial-gradient(2.5px 2.5px at 25% 40%, rgba(196,181,253,1), transparent),
      radial-gradient(2.5px 2.5px at 40% 10%, #fff, transparent),
      radial-gradient(2.5px 2.5px at 55% 55%, rgba(167,139,250,1), transparent),
      radial-gradient(2.5px 2.5px at 70% 25%, #fff, transparent),
      radial-gradient(2.5px 2.5px at 85% 60%, rgba(196,181,253,1), transparent),
      radial-gradient(2.5px 2.5px at 15% 70%, #fff, transparent),
      radial-gradient(2.5px 2.5px at 30% 85%, rgba(139,92,246,1), transparent),
      radial-gradient(2.5px 2.5px at 60% 75%, #fff, transparent),
      radial-gradient(2.5px 2.5px at 75% 90%, rgba(196,181,253,1), transparent),
      radial-gradient(2.5px 2.5px at 90% 35%, #fff, transparent),
      radial-gradient(2.5px 2.5px at 5% 45%, rgba(167,139,250,1), transparent),
      radial-gradient(2.5px 2.5px at 3% 82%, #fff, transparent),
      radial-gradient(2.5px 2.5px at 97% 12%, rgba(196,181,253,1), transparent),
      radial-gradient(2.5px 2.5px at 50% 3%, #fff, transparent),
      radial-gradient(2.5px 2.5px at 22% 95%, rgba(167,139,250,1), transparent);
    animation: twinkle 4s ease-in-out infinite 0.5s;
  }

  /* Estrellas grandes - muy brillantes con glow */
  .stars-large {
    background-image:
      radial-gradient(4px 4px at 8% 20%, #fff, transparent),
      radial-gradient(5px 5px at 20% 50%, rgba(196,181,253,1), transparent),
      radial-gradient(4px 4px at 35% 30%, #fff, transparent),
      radial-gradient(5px 5px at 50% 70%, rgba(168,85,247,1), transparent),
      radial-gradient(4px 4px at 65% 15%, #fff, transparent),
      radial-gradient(5px 5px at 80% 45%, rgba(196,181,253,1), transparent),
      radial-gradient(4px 4px at 92% 80%, #fff, transparent),
      radial-gradient(5px 5px at 45% 90%, rgba(139,92,246,1), transparent),
      radial-gradient(4px 4px at 12% 88%, #fff, transparent),
      radial-gradient(5px 5px at 88% 8%, rgba(196,181,253,1), transparent);
    filter: blur(0.3px);
    animation: twinkleBright 5s ease-in-out infinite 1s;
  }

  @keyframes twinkle {
    0%, 100% { opacity: 0.7; }
    50% { opacity: 1; }
  }

  @keyframes twinkleBright {
    0%, 100% { opacity: 0.8; }
    25% { opacity: 1; }
    50% { opacity: 0.9; }
    75% { opacity: 1; }
  }
</style>
